{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block nav %}
    <nav class="navbar navbar-light bg-light">
        <div class="container  justify-content-between">
        <a class="navbar-brand" href="{{ path('home')}}">Sintomas COVID-19</a>
        <div>
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary my-2">Iniciar Sesi칩n</a>
            <a href="{{ path('registro') }}" class="btn btn-outline-primary my-2">Registrarse</a>
        </div>
        </div>
    </nav>
{% endblock %}
{% block body %}
<div class="container py-3">
    <form method="post">
        <div class="container h-100">
            <div class="row h-100 justify-content-center align-items-center">
                <div class="col-md-6 rounded bg-light my-3 p-5" sytles="align-items:center; justify-content:center; ">
                    <h2 class="mb-3 font-weight-normal">Iniciar sesi칩n</h2>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}


                        <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">Contrase침a</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-md btn-primary my-3" type="submit">
                        Iniciar Sesi칩n
                    </button>        
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
